<%- include("../partials/layout_top", { title }) %>
<div class="d-flex justify-content-between align-items-start gap-3 flex-wrap mb-3">
  <div>
    <h1 class="h3 mb-1"><%= festival.name %></h1>
    <div class="text-white-50">
      <i class="bi bi-geo-alt me-1"></i><%= festival.city %>, <%= festival.country %>
      <span class="mx-2">•</span>
      <i class="bi bi-calendar3 me-1"></i>
      <%= new Date(festival.start_date).toLocaleDateString("ru-RU") %> — <%= new Date(festival.end_date).toLocaleDateString("ru-RU") %>
      <span class="mx-2">•</span>
      <span class="badge bg-soft"><%= festival.genre %></span>
    </div>
  </div>

  <div class="d-flex gap-2">
    <a class="btn btn-outline-light" href="/festivals"><i class="bi bi-arrow-left me-1"></i>Назад</a>
    <% if (isAnyRole(["ORGANIZER","ADMIN"])) { %>
      <a class="btn btn-outline-light" href="/festivals/<%= festival.id %>/edit"><i class="bi bi-pencil me-1"></i>Изменить</a>
      <form method="post" action="/festivals/<%= festival.id %>?_method=DELETE" onsubmit="return confirm('Удалить фестиваль?');">
        <button class="btn btn-outline-danger" type="submit"><i class="bi bi-trash me-1"></i>Удалить</button>
      </form>
    <% } %>
  </div>
</div>

<div class="row g-4">
  <div class="col-12 col-lg-8">
    <div class="card card-glass shadow-sm">
      <div class="card-body p-4">
        <div class="d-flex justify-content-between flex-wrap gap-2">
          <h2 class="h6 mb-0">Описание</h2>
          <div class="small text-white-50">
            <% if (festival.avg_rating) { %>
              <i class="bi bi-star-fill me-1"></i><%= festival.avg_rating %> • отзывов: <%= festival.reviews %>
            <% } else { %>
              <span>Пока нет оценок</span>
            <% } %>
          </div>
        </div>
        <div class="mt-3 text-white-50">
          <%= festival.description || "Описание не заполнено." %>
        </div>

        <% if (festival.website) { %>
          <div class="mt-3">
            <a href="<%= festival.website %>" target="_blank" class="btn btn-sm btn-outline-light">
              <i class="bi bi-link-45deg me-1"></i>Официальный сайт
            </a>
          </div>
        <% } %>
      </div>
    </div>

    <div class="card card-glass shadow-sm mt-4">
      <div class="card-body p-4">
        <h2 class="h6 mb-3">Расписание</h2>
        <% if (!performances.length) { %>
          <div class="text-white-50">Выступления не добавлены.</div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-dark table-hover align-middle">
              <thead>
                <tr>
                  <th>Время</th>
                  <th>Сцена</th>
                  <th>Артист</th>
                  <th class="text-end">Ожидаемая аудитория</th>
                </tr>
              </thead>
              <tbody>
                <% performances.forEach(p => { %>
                  <tr>
                    <td class="text-white-50">
                      <div><%= new Date(p.start_time).toLocaleString("ru-RU") %></div>
                      <div class="small">до <%= new Date(p.end_time).toLocaleTimeString("ru-RU") %></div>
                    </td>
                    <td><%= p.stage_name %></td>
                    <td><%= p.artist_name %></td>
                    <td class="text-end"><%= p.expected_attendance || "—" %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>

    <div class="card card-glass shadow-sm mt-4">
      <div class="card-body p-4">
        <h2 class="h6 mb-3">Отзывы</h2>

        <form method="post" action="/festivals/<%= festival.id %>/rate" class="row g-2 align-items-end">
          <div class="col-12 col-md-3">
            <label class="form-label">Оценка (1–5)</label>
            <select class="form-select" name="rating" required>
              <% [5,4,3,2,1].forEach(v => { %>
                <option value="<%= v %>" <%= myRating && myRating.rating===v ? 'selected' : '' %>><%= v %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-12 col-md-7">
            <label class="form-label">Комментарий</label>
            <input class="form-control" name="review" value="<%= myRating ? (myRating.review || '') : '' %>" placeholder="Короткий отзыв (необязательно)">
          </div>
          <div class="col-12 col-md-2 d-grid">
            <button class="btn btn-primary" type="submit"><i class="bi bi-send me-1"></i>Сохранить</button>
          </div>
        </form>

        <hr class="my-4">

        <div class="vstack gap-3">
          <% if (!reviews.length) { %>
            <div class="text-white-50">Пока нет отзывов.</div>
          <% } %>
          <% reviews.forEach(r => { %>
            <div class="review">
              <div class="d-flex justify-content-between flex-wrap gap-2">
                <div class="fw-semibold text-white"><%= r.full_name %></div>
                <div class="text-white-50 small">
                  <i class="bi bi-star-fill me-1"></i><%= r.rating %>
                  <span class="mx-2">•</span>
                  <%= new Date(r.created_at).toLocaleString("ru-RU") %>
                </div>
              </div>
              <% if (r.review) { %>
                <div class="text-white-50 mt-2"><%= r.review %></div>
              <% } %>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-12 col-lg-4">
    <div class="card card-glass shadow-sm">
      <div class="card-body p-4">
        <h2 class="h6 mb-3">Сцены</h2>
        <% if (!stages.length) { %>
          <div class="text-white-50">Сцены не добавлены.</div>
        <% } else { %>
          <div class="vstack gap-2">
            <% stages.forEach(s => { %>
              <div class="stage-item">
                <div class="fw-semibold text-white"><%= s.name %></div>
                <div class="small text-white-50">Вместимость: <%= s.capacity || '—' %></div>
                <% if (s.description) { %><div class="small text-white-50 mt-1"><%= s.description %></div><% } %>
              </div>
            <% }) %>
          </div>
        <% } %>
        <% if (isAnyRole(["ORGANIZER","ADMIN"])) { %>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/layout_bottom") %>
