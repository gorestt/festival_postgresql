<%- include("../partials/layout_top", { title }) %>
<div class="d-flex justify-content-between align-items-end gap-3 flex-wrap mb-3">
  <div>
    <h1 class="h4 mb-1">Артисты</h1>
    <div class="text-white-50">Справочник исполнителей. Доступно редактирование для организаторов.</div>
  </div>
  <% if (isAnyRole(["ORGANIZER","ADMIN"])) { %>
    <a class="btn btn-primary" href="/artists/new"><i class="bi bi-plus-circle me-1"></i>Добавить</a>
  <% } %>
</div>
<form class="card card-glass shadow-sm mb-4" method="get" action="/artists">
  <div class="card-body p-3 p-md-4 row g-2 align-items-end">
    <div class="col-12 col-md-5">
      <label class="form-label">Поиск</label>
      <input class="form-control" name="q" value="<%= q %>" placeholder="Имя, жанр или страна...">
    </div>
    <div class="col-6 col-md-3">
      <label class="form-label">Сортировка</label>
      <select class="form-select" name="sort">
        <option value="name" <%= sort==='name'?'selected':'' %>>Имя</option>
        <option value="genre" <%= sort==='genre'?'selected':'' %>>Жанр</option>
        <option value="country" <%= sort==='country'?'selected':'' %>>Страна</option>
        <option value="created_at" <%= sort==='created_at'?'selected':'' %>>Дата добавления</option>
      </select>
    </div>
    <div class="col-6 col-md-2">
      <label class="form-label">Порядок</label>
      <select class="form-select" name="order">
        <option value="asc" <%= order==='ASC'?'selected':'' %>>Возр.</option>
        <option value="desc" <%= order==='DESC'?'selected':'' %>>Убыв.</option>
      </select>
    </div>
    <div class="col-12 col-md-2 d-grid">
      <button class="btn btn-outline-light" type="submit"><i class="bi bi-search me-1"></i>Применить</button>
    </div>
  </div>
</form>

<div class="row g-3">
  <% artists.forEach(a => { %>
    <div class="col-12 col-lg-6">
      <div class="card card-glass shadow-sm h-100">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between gap-3">
            <div>
              <div class="h5 mb-1 text-white"><%= a.name %></div>
              <div class="text-white-50 small">
                <span class="badge bg-soft me-2"><%= a.genre %></span>
                <i class="bi bi-geo me-1"></i><%= a.country || "—" %>
              </div>
            </div>
            <div class="text-end text-white-50 small">
              <div><i class="bi bi-broadcast me-1"></i>Выступлений: <span class="text-white"><%= a.gigs %></span></div>
              <% if (isAnyRole(["ORGANIZER","ADMIN"])) { %>
                <div class="mt-2 d-flex gap-2 justify-content-end">
                  <a class="btn btn-sm btn-outline-light" href="/artists/<%= a.id %>/edit"><i class="bi bi-pencil me-1"></i>Изменить</a>
                  <form method="post" action="/artists/<%= a.id %>?_method=DELETE" onsubmit="return confirm('Удалить артиста?');">
                    <button class="btn btn-sm btn-outline-danger" type="submit"><i class="bi bi-trash me-1"></i></button>
                  </form>
                </div>
              <% } %>
            </div>
          </div>
          <% if (a.description) { %>
            <div class="mt-3 text-white-50 clamp-3"><%= a.description %></div>
          <% } %>
        </div>
      </div>
    </div>
  <% }) %>

  <% if (!artists.length) { %>
    <div class="col-12">
      <div class="alert alert-info">По вашему запросу ничего не найдено.</div>
    </div>
  <% } %>
</div>

<%- include("../partials/layout_bottom") %>
