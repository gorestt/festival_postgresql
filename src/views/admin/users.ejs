<%- include("../partials/layout_top", { title }) %>
<div class="d-flex justify-content-between align-items-end flex-wrap gap-2 mb-3">
  <div>
    <h1 class="h4 mb-1">Пользователи</h1>
    <div class="text-white-50">Управление ролями. Доступно только администратору.</div>
  </div>
</div>
<form class="card card-glass shadow-sm mb-4" method="get" action="/admin/users">
  <div class="card-body p-3 p-md-4 row g-2 align-items-end">
    <div class="col-12 col-md-9">
      <label class="form-label">Поиск</label>
      <input class="form-control" name="q" value="<%= q %>" placeholder="ФИО или email...">
    </div>
    <div class="col-12 col-md-3 d-grid">
      <button class="btn btn-outline-light" type="submit"><i class="bi bi-search me-1"></i>Применить</button>
    </div>
  </div>
</form>

<div class="card card-glass shadow-sm">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-dark table-hover align-middle mb-0">
        <thead>
          <tr>
            <th>ФИО</th>
            <th>Email</th>
            <th>Роль</th>
            <th class="text-end">Действия</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
            <tr>
              <td class="text-white"><%= u.full_name %></td>
              <td class="text-white-50"><%= u.email %></td>
              <td><span class="badge bg-soft"><%= u.role %></span></td>
              <td class="text-end">
                <form method="post" action="/admin/users/<%= u.id %>/role" class="d-inline-flex gap-2">
                  <select class="form-select form-select-sm" name="role">
                    <% ["VIEWER","ORGANIZER","ADMIN"].forEach(r => { %>
                      <option value="<%= r %>" <%= u.role===r?'selected':'' %>><%= r %></option>
                    <% }) %>
                  </select>
                  <button class="btn btn-sm btn-outline-light" type="submit"><i class="bi bi-check2"></i></button>
                </form>
              </td>
            </tr>
          <% }) %>
          <% if (!users.length) { %>
            <tr><td colspan="4" class="text-center text-white-50 py-4">Нет данных</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include("../partials/layout_bottom") %>
